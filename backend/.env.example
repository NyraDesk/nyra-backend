# NYRA Backend Configuration
# Copia questo file in .env e configura i valori corretti

# Server Configuration
PORT=3001
NODE_ENV=development

# OpenRouter AI Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_REFERER=http://localhost:3001
OPENROUTER_TITLE=NYRA Backend

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Database Configuration
DATABASE_PATH=./nyra-backend.db

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Gmail API Configuration
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.send,https://www.googleapis.com/auth/gmail.compose,https://www.googleapis.com/auth/gmail.readonly

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
